<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".ContactUs">
    <FrameLayout
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+254721707288"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:id="@+id/sent_to_number"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/myframe"
            android:visibility="invisible"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp"
                    android:layout_marginLeft="30dp"
                    android:hint="Enter  your message"
                    android:id="@+id/textmessage"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/box"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEND MESSAGE"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/sent_message"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Us Email"
                android:textSize="10sp"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/alegreya"
                android:gravity="center"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/facebooki_icon"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_email_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call Us"
                android:textSize="10sp"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/alegreya"
                android:gravity="center"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/phone"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:src="@drawable/phonecall" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Message"
                android:textSize="10sp"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/alegreya"
                android:gravity="center"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/messaging"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:src="@drawable/message2" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WhatsApp"
                android:textSize="10sp"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/alegreya"
                android:gravity="center"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/whatssapp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:src="@drawable/logwhatssapp" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>
</RelativeLayout>